<% if current_page?(:controller => 'pages', :action => 'home') %>
  <div class="banner background-image-home">
<% else %>
  <div class="banner background-image-index">
<% end %>
   <div class="banner-text">
      <% unless user_signed_in? %>
        <h4>WELCOME TO WONDEROBE</h4>
      <% end %>
      <h1>Buy & Sell</h1>
      <h1>Pre-loved clothes</h1>
      <p>Discover new ways to express yourself & Give your old clothes a new home.</p>
      <p>Here on Wonderobe</p>
      <div class="links">
        <% if user_signed_in? %>
          <%= link_to '+ Add a listing', new_listing_path, class:"btn btn-primary" %>
        <% else %>
          <%= link_to "Sign up", new_user_session_path, class: "btn btn-primary" %>
        <% end %>
        <% if current_page?(:controller => 'pages', :action => 'home')%>
          <%= link_to "See all listings", listings_path, class: "btn btn-outline-primary" %>
        <% end %>
      </div>
   </div>
</div>
