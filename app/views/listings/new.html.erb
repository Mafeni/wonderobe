<div class="container mb-5">
    <%= simple_form_for @listing do |f| %>
    <%= f.input :listing_name %>
    <%= f.input :price %>
    <%= f.input :size, collection: @sizes %>
    <%= f.input :condition, collection: @conditions %>
    <%= f.input :description %>
    <%= f.input :photos,
            as: :file,
            input_html: { multiple: true, class: 'd-none', id:'photo-input' },
            label_html: { class: 'upload-btn' },
            label: 'ðŸ“· Upload listing photos' %>
    <%= f.submit class: "btn btn-primary" %>
    <% end %>
</div>
