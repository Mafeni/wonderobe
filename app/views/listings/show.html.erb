<div class="container">
  <div class="row d-flex">
    <div class="col-sm-12 col-md-5">
      <%= cl_image_tag @listing.photos.first.key, width: 390, height: 500, crop: :fill %>
      <ul class='list-inline mt-2 mr-0 ml-0 p-0'>
        <li class='list-inline-item mr-1'>
          <%= cl_image_tag @listing.photos.first.key, width: 85, height: 85, crop: :fill %>
        </li>
        <li class='list-inline-item mr-1'>
          <%= cl_image_tag @listing.photos.first.key, width: 85, height: 85, crop: :fill %>
        </li>
        <li class='list-inline-item mr-1'>
          <%= cl_image_tag @listing.photos.first.key, width: 85, height: 85, crop: :fill %>
        </li>
        <li class='list-inline-item'>
          <%= cl_image_tag @listing.photos.first.key, width: 85, height: 85, crop: :fill %>
        </li>
      </ul>
    </div>
    <div class="col-sm-12 col-md-7">
      <div class="d-flex justify-content-between align-middle">
        <h1><%= @listing.listing_name %></h1>
        <i class="fas fa-plus-circle fa-2x"></i>
      </div>
      <div class='mt-5'>
        <h2 class="secondary-text">
          Description: <%= @listing.description %>
        </h2>
        <h2 class='mt-5'>
          Size: <%= @listing.size %>
        </h2>
        <h2 class='mt-5'>
          Condition: <%= @listing.condition %>
        </h2>
      </div>
      <div class="d-flex mt-5">
        <div>
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key,:gravity=>"face", :height=>50, :width=>50, :crop=>"fill", class:'mr-1' %>
          <% end %>
        </div>
        <div>
          <h3 class='m-0'> <%= current_user.email %> </h3>
          <div class='d-flex m-0'>
            <i class="fas fa-star mr-1"></i>
            <i class="fas fa-star mr-1"></i>
            <i class="fas fa-star mr-1"></i>
            <i class="fas fa-star mr-1"></i>
            <i class="fas fa-star mr-1"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

