<div class="container min-vh-100 mt-5">
  <%= simple_form_for(@user) do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :country %>
    <%= f.input :photo, as: :file, input_html: { multiple: false } %>
    <%= f.submit %>
  <% end %>
</div>
